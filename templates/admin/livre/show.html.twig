{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
            <th>Auteur</th>
                <td>{{ livre.auteur.identite }}</td>
            </tr>
            <th>Cat√©gorie</th>
                <td>
                    {% for categorie in livre.categories %}
                        {{ categorie.libelle ~ (loop.last ? "" : ", ") }}
                    {% else %}
                       --- 
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ livre.couverture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_index') }}" class="btn btn-secondary"><i class="fa fa-reply"></i></a>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}" class="btn btn-success"> <i class="fa fa-edit"></i></a>

    {{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
