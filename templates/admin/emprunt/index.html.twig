{% extends 'base.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
    <h1>Liste des emprunts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Abonné</th>
                <th>Livre</th>
                <th>Date emprunt</th>
                <th>Date prévue</th>
                <th>Date retour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.abonne.pseudo }}</td>
                <td>{{ emprunt.livre.titre }}</td>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('d/m/Y') : '' }}</td>
                <td>{{ emprunt.datePrevue ? emprunt.datePrevue|date('d/m/Y') : '' }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_emprunt_show', {'id': emprunt.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun livre n'a été emprunté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_emprunt_new') }}" class="btn btn-secondary"><i class="fa fa-plus"></i>Ajouter un emprunt</a>
{% endblock %}
